<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
      <h1>Edit Advertisement</h1>
      <form action="/advertisements/<%= advertisement.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Advertisement Title</label>
          <input type="text" name="title" value="<%= advertisement.title %>" class="form-control" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea name="description" rows="4" class="form-control" placeholder="Enter Description"><%= advertisement.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>
    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
